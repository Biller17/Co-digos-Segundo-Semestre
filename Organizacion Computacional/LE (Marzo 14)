CHONA MACRO PRIMERPARAMETRO, SEGUNDOPARAMETRO ; EL P1 ES EL PARAMETRO, ESTA FUNCION SE VA A LLAMAR
      LOCAL AB
      MOV AH, 0EH
      MOV SI,0
AB: MOV AL, PRIMERPARAMETRO[SI]
    INT 10H
    INC SI
    CMP AL, SEGUNDOPARAMETRO
    JNZ AB
CHONA ENDM 

org 100H
JMP INICIO
BSB DB 'ENSAMBLADOR ESTA CHIDO!',0
BEYONCE DB 'OMAR SE LA COME',3
SHAKIRA DB 'Y LE ENCANTA COMERSELA BIEN RICO',7

INICIO: MOV AH,00   
        MOV AL, 03
        INT 10H      ; ABRIR PANTALLA    
        CALL JUANITA
        CHONA BSB,0
        CALL JUANITA
        CHONA BEYONCE, 3
        CALL JUANITA
        CHONA SHAKIRA, 7
        RET             
        
JUANITA PROC
    MOV AH, 01
AB: INT 16H     
    JZ AB    ;ESPERA HASTA QUE HAYA OPRIMIDO ALGO
    MOV AH,00; LIMPIAR EL BUFFER
    INT 16H
    RET
JUANITA ENDP