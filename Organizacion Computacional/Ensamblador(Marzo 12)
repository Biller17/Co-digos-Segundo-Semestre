;ingresaS ALGO EN EL TECLADO Y SE VA IMPRIMIENDO CON UN DELAY DE 5 SEGUNDOS
org 100h
MOV AH, 00
MOV AL, 03
INT 10H; ABRIR PANTALLA
;A PARTIR DE AQUI, GUARDAR LA INDORMACION
MOV DI, 300H
ENTRADA: MOV AH, 01
AB:      INT 16H ;TOMO EL DATO DESDE EL TECLADO
         JZ AB ;PREGUNTA CUANDO LA BANDERA Z ES UNO
         STOSB
         MOV AH,00 ;LIMPIAR EL BUFFER
         INT 16H
         CMP AL, 0DH; COMPARA CONTRA ENTERO SI LA COMPARACION ES DIFERENTE DE 0 ENTONCES LA BANDERA DE Z ES CERO
         JNZ ENTRADA ;CHECA CUANDO LA BANDERA DE Z ES CERO       
         MOV SI, 300H      
 ; SACAR LOS DATOS INGRESADO POR VIDEO
 SALIDA: MOV AH, 0EH    
         LODSB   
         INT 10H ;IMPRIMIR EN PANTALLA   
         MOV AH, 86H
         MOV CX, 4CH
         MOV DX, 4B40H
         INT 15H; FUNCION DE ESPERA  se guarda EN CX Y DX LOS MICROSEGUNDOS DE ESPERA  
         ;VA A SER UNA ESPERA DE 5 SEGUNDOS
         CMP AL, 0DH
         JNZ SALIDA
         RET
         
----------------------------------------------------------------------------------------------------------------------------------
CHONA MACRO PRIMERPARAMETRO, SEGUNDOPARAMETRO ; EL P1 ES EL PARAMETRO, ESTA FUNCION SE VA A LLAMAR
      LOCAL AB
      MOV AH, 0EH
      MOV SI,0
AB: MOV AL, PRIMERPARAMETRO[SI]
    INT 10H
    INC SI
    CMP AL, SEGUNDOPARAMETRO
    JNZ AB
CHONA ENDM 

org 100H
JMP INICIO
BSB DB 'ENSAMBLADOR ESTA CHIDO!',0
BEYONCE DB 'OMAR SE LA COME',3
SHAKIRA DB 'Y LE ENCANTA COMERSELA BIEN RICO',7

INICIO: MOV AH,00   
        MOV AL, 03
        INT 10H      ; ABRIR PANTALLA    
        CALL JUANITA
        CHONA BSB,0
        CALL JUANITA
        CHONA BEYONCE, 3
        CALL JUANITA
        CHONA SHAKIRA, 7
        RET             
        
JUANITA PROC
    MOV AH, 01
AB: INT 16H     
    JZ AB    ;ESPERA HASTA QUE HAYA OPRIMIDO ALGO
    MOV AH,00; LIMPIAR EL BUFFER
    INT 16H
    RET
JUANITA ENDP